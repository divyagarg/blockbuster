<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/grid_color_selector"
    android:orientation="vertical"
    android:padding="@dimen/grid_padding">

    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="@dimen/movie_poster_dim"
        android:layout_height="@dimen/movie_poster_dim"
        android:scaleType="centerCrop"
        android:contentDescription="@string/poster_description" />

    <TextView
        android:id="@+id/grid_item_title"
        android:layout_width="@dimen/grid_movie_title_width"
        android:layout_height="@dimen/grid_movie_title_height"
        android:layout_marginTop="@dimen/grid_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/grid_movie_title_text_size"
        tools:text="Forrest Gump"/>


</LinearLayout>